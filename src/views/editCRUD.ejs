<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <title>Edit User In4</title>
</head>
<body>
    <div class="container mt-5 col-4">
        <form action="/put-crud" method="POST">
            <div class="form-group input-with-icon">
                <i class="fas fa-envelope"></i>
                <label for="name">Name</label>
                <input type="name" class="form-control" name="name" placeholder="Enter your Name" 
                value="<%= user.name %>">
            </div>
            <div class="form-group input-with-icon">
                <i class="fas fa-envelope"></i>
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" placeholder="Enter your Email" 
                value="<%= user.email %>">
            </div>
        
            <div class="form-group input-with-icon">
                <i class="fas fa-lock"></i>
                <label for="phone">Phone</label>
                <input type="text" class="form-control" name="phone" placeholder="Enter your phone" 
                value="<%=user.phone%>">
            </div>
            <div class="form-group input-with-icon">
                <i class="fas fa-lock"></i>
                <label for="address">Address</label>
                <input type="text" class="form-control" name="address" placeholder="Enter your address" 
                value="<%=user.address%>">
            </div>
            <input type="hidden" name="id" value="<%=user.id%>">
            <button type="submit" class="btn btn-dark btn-block">Update</button>
            
        </form>
    </div>
</body>
</html>